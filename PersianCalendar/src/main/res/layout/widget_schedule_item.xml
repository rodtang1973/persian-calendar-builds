<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_schedule_item_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/start_padding"
        android:layout_width="8dp"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingTop="6dp"
            android:paddingEnd="0dp">

            <FrameLayout
                android:id="@+id/top_space"
                android:layout_width="wrap_content"
                android:layout_height="6dp" />

            <TextView
                android:id="@+id/highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/widget_schedule_highlight"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/widget_schedule_highlight_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/weekday_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".75"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/widget_schedule_title"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/day_of_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/widget_schedule_title"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/bigger_month_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".9"
                android:lineSpacingMultiplier="1.1"
                android:textColor="@color/widget_schedule_title"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/day_wrapper"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp">

                <TextView
                    android:id="@+id/today"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/widget_schedule_day_today"
                    android:lineSpacingMultiplier=".75"
                    android:padding="1dp"
                    android:textAlignment="center"
                    android:textColor="@color/widget_add_event_icon"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/day"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:lineSpacingMultiplier=".75"
                    android:padding="1dp"
                    android:textAlignment="center"
                    android:textColor="@color/widget_schedule_title"
                    android:textSize="14sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/middle_padding"
                android:layout_width="2dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/event_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/widget_schedule_horizontal_padding"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="@dimen/widget_schedule_horizontal_padding"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:minHeight="32dp"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="6dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/end_padding"
        android:layout_width="@dimen/widget_schedule_item_end_padding"
        android:layout_height="wrap_content" />

</LinearLayout>
